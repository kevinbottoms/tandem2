<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Department</th>
      <th>Myskills</th>
      <th>Wantedskills</th>
      <th>Location</th>
      <th>Available</th>
      <th>Mentor</th>
      <th>Private</th>
      <th>Personal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.department %></td>
        <td><%= user.myskills %></td>
        <td><%= user.wantedskills %></td>
        <td><%= user.location %></td>
        <td><%= user.available %></td>
        <td><%= user.mentor %></td>
        <td><%= user.private %></td>
        <td><%= user.personal %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

